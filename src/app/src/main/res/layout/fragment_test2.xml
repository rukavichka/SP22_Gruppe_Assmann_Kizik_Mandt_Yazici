<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/roomTitle"
        android:layout_width="281dp"
        android:layout_height="39dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.078" />

    <TextView
        android:id="@+id/timeSlot1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="8 Uhr - 10 Uhr"
        app:layout_constraintEnd_toEndOf="@+id/roomTitle"
        app:layout_constraintHorizontal_bias="0.004"
        app:layout_constraintStart_toStartOf="@+id/roomTitle"
        app:layout_constraintTop_toBottomOf="@+id/roomTitle"
        android:background="@color/light_green"/>

    <TextView
        android:id="@+id/timeSlot2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="10 Uhr - 12 Uhr"
        app:layout_constraintEnd_toStartOf="@+id/timeSlot3"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toEndOf="@+id/timeSlot1"
        app:layout_constraintTop_toBottomOf="@+id/roomTitle"
        android:background="@color/light_green"/>

    <TextView
        android:id="@+id/timeSlot3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="12 Uhr - 14 Uhr"
        app:layout_constraintEnd_toEndOf="@+id/roomTitle"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/roomTitle"
        app:layout_constraintTop_toBottomOf="@+id/roomTitle"
        android:background="@color/light_green"/>

    <TextView
        android:id="@+id/timeSlot4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="14 Uhr - 16 Uhr"
        app:layout_constraintEnd_toEndOf="@+id/roomTitle"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/roomTitle"
        app:layout_constraintTop_toBottomOf="@+id/timeSlot1"
        android:background="@color/light_green"/>

    <TextView
        android:id="@+id/timeSlot5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:text="16 Uhr - 18 Uhr"
        app:layout_constraintEnd_toStartOf="@+id/timeSlot6"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toEndOf="@+id/timeSlot4"
        app:layout_constraintTop_toBottomOf="@+id/roomTitle"
        android:background="@color/light_green"/>

    <TextView
        android:id="@+id/timeSlot6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:background="@color/light_green"
        android:text="18 Uhr - 20 Uhr"
        app:layout_constraintEnd_toEndOf="@+id/roomTitle"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/roomTitle"
        app:layout_constraintTop_toBottomOf="@+id/roomTitle" />

    <TextView
        android:id="@+id/timeSlot7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20 Uhr - 22 Uhr"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/timeSlot4"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/roomTitle"
        app:layout_constraintTop_toBottomOf="@+id/timeSlot4"
        app:layout_constraintVertical_bias="0.056"
        android:background="@color/light_green"/>
</androidx.constraintlayout.widget.ConstraintLayout>