<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/roomTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="32sp"
        android:text="@string/example_time"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/dividerBlackLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="80sp"
        android:background="@android:color/darker_gray"
        app:layout_constraintBottom_toBottomOf="@+id/roomTime"
        app:layout_constraintStart_toEndOf="@+id/roomTime"
        app:layout_constraintTop_toTopOf="@+id/roomTime" />

</androidx.constraintlayout.widget.ConstraintLayout>