<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/contentLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/contentTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:text="@string/content_detail_title"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/contentIcon"
        app:layout_constraintTop_toTopOf="@+id/contentIcon" />

    <ImageView
        android:id="@+id/contentIcon"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:contentDescription="TODO"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_pdf" />

    <TextView
        android:id="@+id/contentDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:text="@string/content_detail_example"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/contentIcon"
        app:layout_constraintTop_toBottomOf="@+id/contentTitle" />

    <View
        android:id="@+id/dividerBlackLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="6dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@+id/contentDetail"
        tools:layout_editor_absoluteX="0dp" />
</androidx.constraintlayout.widget.ConstraintLayout>